<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.francesca.labyrinth">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icona"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.francesca.labyrinth.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.francesca.labyrinth.Game"
            android:label="@string/title_activity_game"
            android:parentActivityName="com.example.francesca.labyrinth.Levels"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.francesca.labyrinth.Levels" />
        </activity>
        <activity
            android:name="com.example.francesca.labyrinth.Levels1"
            android:label="@string/classicDFS"
            android:parentActivityName="com.example.francesca.labyrinth.Levels"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.francesca.labyrinth.Levels" />
        </activity>
        <activity
            android:name="com.example.francesca.labyrinth.Victory"
            android:label="@string/title_activity_victory"
            android:parentActivityName="com.example.francesca.labyrinth.Levels"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.francesca.labyrinth.Levels" />
        </activity>
        <activity
            android:name="com.example.francesca.labyrinth.Levels"
            android:label="@string/title_activity_levels"
            android:parentActivityName="com.example.francesca.labyrinth.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.francesca.labyrinth.MainActivity" />
        </activity>
        <activity
            android:name="com.example.francesca.labyrinth.Levels2"
            android:label="@string/classicKruskal"
            android:parentActivityName="com.example.francesca.labyrinth.Levels"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.francesca.labyrinth.Levels" />
        </activity>
        <activity
            android:name="com.example.francesca.labyrinth.Levels3"
            android:label="@string/advancedDFS"
            android:parentActivityName="com.example.francesca.labyrinth.Levels"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.francesca.labyrinth.Levels" />
        </activity>
        <activity
            android:name="com.example.francesca.labyrinth.Levels4"
            android:label="@string/advancedKruskal"
            android:parentActivityName="com.example.francesca.labyrinth.Levels"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.francesca.labyrinth.Levels" />
        </activity>
    </application>

</manifest>
